
{% extends 'base.html.twig' %}

{% block title %}{{ task.title ?? 'Task' }}{% endblock %}

{% block body %}
<div class="container py-4">

  <div class="d-flex align-items-center justify-content-between mb-3">
    <div>
      <h1 class="page-title m-0">Détail de la tâche</h1>
   
    </div>

    <div class="d-flex align-items-center gap-2">
      <a class="btn btn-outline-secondary" href="{{ path('app_task_index') }}">← Retour</a>
      <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_task_edit', {id: task.id}) }}">✏️ Modifier</a>

      {# КОРЗИНА вместо текста #}
      {{ include('task/_delete_form.html.twig', {
        task: task,
        button_class: 'btn btn-action btn-delete',
        inner_html: '🗑️'
      }) }}
    </div>
  </div>

  <div class="table-card bg-white shadow-sm">
    <div class="table-responsive">
      <table class="table align-middle mb-0">
        <tbody>
          <tr>
            <th style="width:200px">ID</th>
            <td class="text-muted">{{ task.id }}</td>
          </tr>
          <tr>
            <th>Titre</th>
            <td>{{ task.title }}</td>
          </tr>
          <tr>
            <th>Statut</th>
            <td>
              {% set statusText = task.status ?? '' %}
              {% if statusText %}
                {% set st = statusText|lower %}
                {% set badgeClass =
                  st in ['à faire','a faire','todo','a_faire'] ? 'badge-todo' :
                  (st in ['en cours','doing','progress'] ? 'badge-doing' :
                  (st in ['terminé','termine','done'] ? 'badge-done' : 'badge-other')) %}
                <span class="badge status-badge {{ badgeClass }}">{{ task.status }}</span>
              {% else %}
                <span class="text-muted">—</span>
              {% endif %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
{% endblock %}