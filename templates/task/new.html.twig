{% extends 'base.html.twig' %}

{% block title %}Créer une tâche{% endblock %}

{% block body %}
<div class="container py-4">

  {# открываем форму здесь, чтобы submit-кнопка была в верхнем хедере #}
  {{ form_start(form) }}

  {# Хедер страницы + действия справа (как в Show/Edit) #}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div>
      <h1 class="page-title m-0">Créer une tâche</h1>
      <div class="page-subtitle">Renseignez les informations de votre tâche</div>
    </div>

    <div class="d-flex align-items-center gap-2">
      <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary">← Retour</a>
      <button type="submit" class="btn btn-outline-success ">Enregistrer</button>
    </div>
  </div>

  {# Карточка с полями формы, центрируем и даём внутренние отступы #}
  <div class="table-card bg-white shadow-sm mx-auto">
    <div class="p-3">
      <div class="mb-3">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez un titre'}}) }}
      </div>

      <div class="mb-3">
        {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
      </div>
    </div>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}