{% extends 'base.html.twig' %}
{% block title %}Modifier la tâche{% endblock %}

{% block body %}
<div class="container py-4">

  {# Заголовок + экшен-кнопки справа #}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div>
      <h1 class="page-title m-0">Modifier la tâche</h1>
      <div class="page-subtitle">Mettez à jour les informations de votre tâche</div>
    </div>

    <div class="d-flex align-items-center gap-2">
      <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_task_index') }}">⟵ Retour</a>
      <button form="form-task" type="submit" class="btn btn-outline-success btn-sm">
        ✓ Enregistrer
      </button>
      {{ include('task/_delete_form.html.twig') }}
    </div>
  </div>

  {# Карточка с формой #}
  <div class="table-card bg-white shadow-sm p-4">
    {{ form_start(form, {attr: {id: 'form-task'}}) }}
      <div class="mb-3">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez un titre'}}) }}
      </div>

      <div class="mb-3">
        {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
      </div>
    {{ form_end(form) }}
  </div>

</div>
{% endblock %}