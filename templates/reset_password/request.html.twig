

{% extends 'base.html.twig' %}
{% block layout_header %}{% endblock %}
{% block layout_footer %}{% endblock %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="page-bg-request">
  <div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card card-glass border-0 shadow rounded-4">

        {# flash #}
        {% for flash_error in app.flashes('reset_password_error') %}
          <div class="alert alert-danger m-3 mb-0" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="card-header bg-kanban-footer text-primary-emphasis text-center rounded-top-4">
          <h1 class="h3 fw-bold mb-1">Reset your password</h1>
        </div>

        <div class="card-body p-4 p-md-5">
          
          {{ form_start(requestForm) }}

             {{ form_label(requestForm.email, 'E-mail', {         
               label_attr: { class: 'form-label small text-muted' }
             }) }}
         
             {# Инпут как на логине #}
             {{ form_widget(requestForm.email, {
                  attr: {
                 id: 'inputEmail',
                 class: 'form-control',
                 autocomplete: 'email'
                        }
             }) }}

             {{ form_errors(requestForm.email)}}

          {# Текст-подсказка в стиле Bootstrap #}
          <div class="form-text mb-4">
            Enter your email address, and we will send you a link to reset your password.
          </div>

          {# Кнопка: на ширину колонки и визуально по центру #}
          <div class="d-flex align-items-center justify-content-between mt-4">
          <a href="{{ path('app_login') }}" class="link-secondary text-decoration-none"> &#8592; Back </a>
            <button type="submit" class="btn btn-create px-4">
              Send password reset email
            </button>
          </div>

          {{ form_end(requestForm) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}