
{% extends 'base.html.twig' %}

{% block title %}Kanban Board{% endblock %}

{% block body %}



<div class="container py-4">
  <header class="text-center mb-4">
    <h1 class="h4 text-uppercase fw-bold letter-2">Tableau Kanban</h1>
    <p class="text-muted small mb-0"></p>
  </header>

  <section class="kanban shadow-sm rounded-4 bg-white p-3 p-md-4">
    <div class="row g-3 kanban-columns">
      {# КОЛОНКА: Requested #}
      <div class="col-12 col-md-4">
        <div class="kanban-column h-100 rounded-3 overflow-hidden">
          <div class="kanban-column-header d-flex align-items-center justify-content-between bg-primary text-white px-3 py-2">
            <span class="fw-semibold text-uppercase small">A faire</span>
            <span class="badge text-bg-light text-dark">WIP 3/5</span>
          </div>
          <div class="kanban-cards p-2">
            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Dessiner la maquette de la page D'accueil</div>
                    <div class="kanban-meta small text-muted">#101 • 2d</div>
                  </div>
                  <span class="dot bg-primary"></span>
                </div>
              </div>
            </div>

            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Valider les couleurs</div>
                    <div class="kanban-meta small text-muted">#114 • 1d</div>
                  </div>
                  <span class="dot bg-warning"></span>
                </div>
              </div>
            </div>

            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Rassembler les icones SVG</div>
                    <div class="kanban-meta small text-muted">#119 • 3h</div>
                  </div>
                  <span class="dot bg-success"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {# In cours #}
      <div class="col-12 col-md-4">
        <div class="kanban-column h-100 rounded-3 overflow-hidden">
          <div class="kanban-column-header d-flex align-items-center justify-content-between bg-warning text-dark px-3 py-2">
            <span class="fw-semibold text-uppercase small">En cours</span>
            <span class="badge text-bg-dark">3/4</span>
          </div>
          <div class="kanban-cards p-2">
            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Mise en page du Formulaire de connexion</div>
                    <div class="kanban-meta small text-muted">#132 • 5h</div>
                  </div>
                  <span class="dot bg-warning"></span>
                </div>
              </div>
            </div>

            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Grille du catalogue</div>
                    <div class="kanban-meta small text-muted">#140 • 1d</div>
                  </div>
                  <span class="dot bg-primary"></span>
                </div>
              </div>
            </div>

            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">


                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Fiche produit</div>
                    <div class="kanban-meta small text-muted">#141 • 1d</div>
                  </div>
                  <span class="dot bg-success"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {# Terminé #}
      <div class="col-12 col-md-4">
        <div class="kanban-column h-100 rounded-3 overflow-hidden">
          <div class="kanban-column-header d-flex align-items-center justify-content-between bg-success text-white px-3 py-2">
            <span class="fw-semibold text-uppercase small">Terminé</span>
            <span class="badge text-bg-light text-dark">✓</span>
          </div>
          <div class="kanban-cards p-2">
            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">En-tete-du site</div>
                    <div class="kanban-meta small text-muted">#090 • 2d</div>
                  </div>
                  <span class="dot bg-success"></span>
                </div>
              </div>
            </div>

            <div class="card kanban-card mb-2 shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Pied de page </div>
                    <div class="kanban-meta small text-muted">#091 • 1d</div>
                  </div>
                  <span class="dot bg-success"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# SWIMLANE: Expedite #}
    <div class="kanban-swimlane mt-3">
      <div class="lane-title bg-danger text-white text-center fw-semibold small py-1 rounded-top">Urgent</div>
      <div class="lane-area bg-body-secondary p-2 rounded-bottom">
        <div class="row g-2">
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card kanban-card shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Réparer la compilation</div>
                    <div class="kanban-meta small text-muted">#200 • urgent</div>
                  </div>
                  <span class="dot bg-danger"></span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card kanban-card shadow-sm border-0">
              <div class="card-body p-2">
                <div class="d-flex align-items-start justify-content-between">
                  <div>
                    <div class="small fw-semibold">Mettre à jour le favicon</div>
                    <div class="kanban-meta small text-muted">#201 • aujourd'hui</div>
                  </div>
                  <span class="dot bg-danger"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>
{% endblock %}